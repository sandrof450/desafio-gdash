generator client {
  provider = "prisma-client-js"
  binaryTargets   = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  userId       String       @id @map("_id")
  userName     String
  userEmail    String       @unique
  userSenha    String
  refreshToken String?

  logs      WeatherLog[] @relation("UserLogs")
}

model WeatherLog {
  logId       String   @id @default(auto()) @map("_id") @db.ObjectId
  temperature Float
  humidity    Float
  windSpeed   Float
  description String
  createdAt   DateTime @default(now())  

  userId      String   @db.ObjectId
  user        User     @relation("UserLogs", fields: [userId], references: [userId])
}
